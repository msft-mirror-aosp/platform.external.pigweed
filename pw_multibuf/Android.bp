package {
    default_applicable_licenses: ["external_pigweed_license"],
}

filegroup {
    name: "pw_multibuf_src_files",
    srcs: [
        "chunk.cc",
        "multibuf.cc",
    ],
}

cc_library_headers {
    name: "pw_multibuf",
    cpp_std: "c++20",
    export_include_dirs: [
        "public",
    ],
    header_libs: [
        "pw_assert",
        "pw_log",
        "pw_span",
        "pw_sync",
    ],
    export_header_lib_headers: [
        "pw_assert",
        "pw_log",
        "pw_span",
        "pw_sync",
    ],
    vendor_available: true,
    host_supported: true,
}

cc_defaults {
    name: "pw_multibuf_defaults",
    cpp_std: "c++20",
    srcs: [
        ":pw_multibuf_src_files",
    ],
    header_libs: [
        "pw_multibuf",
    ],
    export_header_lib_headers: [
        "pw_multibuf",
    ],
    static_libs: [
        "pw_bytes",
    ],
    export_static_lib_headers: [
        "pw_bytes",
    ],
}
