  public_configs = [
    ":armv8m",
    ":backend_config",
    ":public_include_path",
  ]
  public = [
    "public/pw_cpu_exception_cortex_m/cpu_state.h",
    "public_overrides/pw_cpu_exception_backend/state.h",
  ]
  public_deps = [ "$dir_pw_preprocessor" ]
}

